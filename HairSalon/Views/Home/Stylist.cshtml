@{
  Layout = "_Layout";
}
<div class="container">
  <h3>Stylist Directory</h3>
    <div class="row">
      <div class="col-md-6">
        <div class="stylists">
          <h4>Current Stylists</h4>
          @foreach(var stylist in Stylist)
          {
            <div class="jumbotron">
              <li>Employee #: @stylist.GetStylistId()
                <ul>
                  <li>Stylist name: @stylist.GetStylistName()</li>
                  <li>Stylist Hire Date: @stylist.GetHireDate()</li>
                  <li>Number of Clients: @stylist.GetNumberOfClients()</li>
                </ul>
              </li>
          }
        </div>
      </div>
      <div class="col-md-6">
        <h3>Enter a new stylist</h3>
        <form class="form-group" action="/Stylists/AddStylist" method="post">
          <label for="name">Name:</label>
          <input type="text" name="name">
          <label for="hireDate">Date hired:</label>
          <input type="text" name="hireDate">
          <label for="clients">Number of Clients:</label>
          <button type="submit" name="button">Submit</button>
        </form>
      </div>
      <!-- end form -->

    </div>
</div>
