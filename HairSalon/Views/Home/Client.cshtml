@{
  Layout = "_Layout";
}
<div class="container">
  <h3>@stylist.GetStylistName()'s Client Directory;</h3>
  <div class="row">
    <div class="col-md-6">
      <div class="stylists">
        <h4>Current Clients</h4>
        @foreach(var client in Client)
        {
          <li>
            <ul>
              <li>Client Name: @client.GetClientName()</li>
              <li>Client Price: @client.GetPrice()</li>
              <li>Client Style Preference: @client.GetClStyle()</li>
              <li>Client's next appointment: @client.GetAppointmentDate()</li>
            </ul>
          </li>
        }
      </div>
    </div>
    <!-- end of col -->
    <div class="col-md-6">
      <h3>Enter a new client</h3>
      <form class="form-group" action="/Clients/AddClient" method="post">
        <label for="name">Name:</label>
        <input type="text" name="name">
        <label for="clName">Client Name:</label>
        <input type="text" name="hireDate">
        <label for="clPrice">Client Price</label>
        <input type="text" name="clPrice">
        <label for="date">Date of Next Appointment:</label>
        <input type="date" name="date">
        <button type="submit" name="button">Submit</button>
      </form>
    </div>
    <!-- end form -->
    <!-- end of col -->
  </div>
  <!-- end of row -->
  <div class="row">
    <div class="col-md-6">
      <form class="form-group" action="/" method="get">
        <button type="submit" name="button">Return Home</button>
      </form>
      <form class="form-group" action="/Stylists/AddStylist" method="get">
        <button type="submit" name="button">Enter a new stylist</button>
      </form>
    </div>
  </div>
</div>
